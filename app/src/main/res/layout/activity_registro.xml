<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="registroActivity"
            type="com.sisMoviles.fixtech.RegistroActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#455156">

        <Button
            android:id="@+id/btnRegistroRegistro"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:backgroundTint="@color/azul"
            android:text="@string/register_button"
            android:textSize="32sp"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="390dp"
            android:layout_height="629dp"
            android:layout_marginBottom="42dp"
            android:backgroundTint="@color/grisclaro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/etRegistroPhone"
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="31dp"
                    android:background="@drawable/edit_text_border_radius"
                    android:ems="10"
                    android:hint="@string/phonenumber"
                    android:inputType="text"
                    android:padding="10dp"
                    android:text=""
                    app:layout_constraintBottom_toTopOf="@+id/ivRegistroPreview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroPassword" />

                <EditText
                    android:id="@+id/etRegistroPassword"
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_border_radius"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="text"
                    android:padding="10dp"
                    android:text=""
                    app:layout_constraintBottom_toTopOf="@+id/etRegistroPhone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroEmail" />

                <EditText
                    android:id="@+id/etRegistroUsername"
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_border_radius"
                    android:ems="10"
                    android:hint="@string/nickname"
                    android:inputType="text"
                    android:padding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/etRegistroEmail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroApellidos" />

                <EditText
                    android:id="@+id/etRegistroEmail"
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_border_radius"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="text"
                    android:padding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/etRegistroPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroUsername" />

                <EditText
                    android:id="@+id/etRegistroApellidos"
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_border_radius"
                    android:ems="10"
                    android:hint="@string/lastname"
                    android:inputType="text"
                    android:padding="10dp"
                    android:text=""
                    app:layout_constraintBottom_toTopOf="@+id/etRegistroUsername"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroName" />

                <EditText
                    android:id="@+id/etRegistroName"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_border_radius"
                    android:ems="10"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:padding="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/etRegistroApellidos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="59dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="128dp"
                    android:fontFamily="@font/outfit_medium"
                    android:text="@string/register_button"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    app:layout_constraintBottom_toTopOf="@+id/etRegistroName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="69dp"
                    android:layout_height="49dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/etRegistroName"
                    app:layout_constraintEnd_toStartOf="@+id/textView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo_small" />

                <Button
                    android:id="@+id/btnRegistroImagen"
                    android:layout_width="311dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="@color/naranja"
                    android:fontFamily="@font/outfit_medium"
                    android:text="Agregar Imagen"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivRegistroPreview" />

                <ImageView
                    android:id="@+id/ivRegistroPreview"
                    android:layout_width="52dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="169dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="169dp"
                    android:layout_marginBottom="13dp"
                    app:layout_constraintBottom_toTopOf="@+id/btnRegistroImagen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etRegistroPhone"
                    app:srcCompat="@drawable/anadirimagen" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>