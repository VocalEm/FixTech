<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="publicacionItem"
            type="com.sisMoviles.fixtech.viewHolders.PublicacionViewHolder" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/grisclaro"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logosmall3"
                android:layout_width="61dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_small" />

            <TextView
                android:id="@+id/tvPublicacionItemFecha"
                android:layout_width="106dp"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="12-11-2003"
                android:textAlignment="viewEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivPublicacionItemUserImg"
                android:layout_width="60dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/ivPublicacionItemPublicacionImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logosmall3"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/tvPublicacionItemTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="131dp"
                android:fontFamily="@font/outfit_semibold"
                android:text="Titulo Publicacion"
                android:textColor="@color/azul"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ivPublicacionItemUserImg"
                app:layout_constraintTop_toBottomOf="@+id/tvPublicacionItemUsername" />

            <TextView
                android:id="@+id/tvPublicacionItemUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="232dp"
                android:fontFamily="@font/outfit_semibold"
                android:text="VocalEm"
                android:textColor="@color/naranja"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ivPublicacionItemUserImg"
                app:layout_constraintTop_toBottomOf="@+id/logosmall3" />

            <TextView
                android:id="@+id/tvPublicacionItemDescripcion"
                android:layout_width="369dp"
                android:layout_height="41dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/ivPublicacionItemPublicacionImg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPublicacionItemTitulo"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/ivPublicacionItemPublicacionImg"
                android:layout_width="362dp"
                android:layout_height="253dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.483"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPublicacionItemDescripcion"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <ImageButton
                android:id="@+id/ibPublicacionItemBorrar"
                android:layout_width="53dp"
                android:layout_height="51dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="41dp"
                android:background="@color/grisclaro"
                app:layout_constraintBottom_toTopOf="@+id/tvPublicacionItemDescripcion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPublicacionItemFecha"
                app:srcCompat="@drawable/borrar" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>