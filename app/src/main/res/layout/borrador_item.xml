<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="borradorItem"
            type="com.sisMoviles.fixtech.viewHolders.BorradorViewHolder" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/padding"
        android:layout_width="296dp"
        android:layout_height="114dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:maxWidth="340dp"
        android:maxHeight="100dp"
        android:minHeight="100dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp">

            <TextView
                android:id="@+id/tvBorradorDescripcion"
                android:layout_width="170dp"
                android:layout_height="56dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="20dp"
                android:breakStrategy="simple"
                android:fontFamily="@font/nunito_semibold"
                android:maxLines="3"
                android:paddingLeft="10dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/grisclaro"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.354"
                app:layout_constraintStart_toEndOf="@+id/ibBorradorEditar"
                app:layout_constraintTop_toBottomOf="@+id/tvBorradorTitulo" />

            <TextView
                android:id="@+id/tvBorradorTitulo"
                android:layout_width="176dp"
                android:layout_height="29dp"
                android:layout_marginTop="7dp"
                android:breakStrategy="simple"
                android:fontFamily="@font/outfit_semibold"
                android:maxLines="1"
                android:padding="0dp"
                android:paddingLeft="5dp"
                android:text="Titulo Publicacion"
                android:textAlignment="center"
                android:textColor="@color/grisclaro"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/tvBorradorDescripcion"
                app:layout_constraintEnd_toStartOf="@+id/ibBorradorEliminar"
                app:layout_constraintHorizontal_bias="0.833"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/ibBorradorEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="84dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvBorradorDescripcion"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/borrar" />

            <ImageButton
                android:id="@+id/ibBorradorEditar"
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="41dp"
                android:layout_marginBottom="42dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@android:drawable/ic_menu_edit" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
